doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Toxin
    body
        include ./assets/components/text-field/text-field.pug
        include ./assets/components/bullet-list/bullet-list.pug
        include ./assets/components/radio-buttons/radio-buttons.pug
        include ./assets/components/toggle-buttons/toggle.pug
        include ./assets/components/masked-text-field/masked-text-field.pug
        include ./assets/components/benefits/benefits.pug
        include ./assets/components/checkbox-list/checkbox-list.pug
        include ./assets/components/expandable-checkbox-list/expandable-checkbox-list.pug
        include ./assets/components/buttons/small-button.pug
        include ./assets/components/buttons/button-filled.pug
        include ./assets/components/buttons/button-border.pug
        include ./assets/components/buttons/big-button.pug

        +text-field('Email')
        +bullet-list(['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00'])
        +radio-buttons
        +toggle('Получать спецпредложения')
        +masked-text-field('дд.мм.гггг')
        +benefits([{
            title: 'Комфорт',
            text: 'Шумопоглощающие стены',
            logo: 'emoticon.svg'
        },
        {
            title: 'Удобство',
            text: 'Окно в каждой из спален',
            logo: 'city.svg'
        }])
        +checkbox-list({
            labels: ['Можно курить', 'Можно с питомцами', 'Можно пригласить гостей (до 10 человек)'],
            checked: [0, 1]
        })
        +expandable-checkbox-list('Expandable checkbox list')
        +small-button('click me')
        +button-filled('click me')
        +button-border('click me')
        +big-button({
            text: 'перейти к оплате',
            link: '/pages/search.html'
        })
